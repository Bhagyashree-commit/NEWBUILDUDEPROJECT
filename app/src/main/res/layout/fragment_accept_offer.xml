<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contractor.AcceptOfferFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
            android:background="@color/green_100"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:singleLine="true"
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Site Details"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:background="@color/red_100"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:textSize="@dimen/_12sdp"></TextView>



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
            android:background="@color/yellow_100"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <Spinner
                android:id="@+id/spin_cat"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_35sdp"
                android:fontFamily="sans-serif-condensed"
                android:spinnerMode="dropdown"
                android:text="Location"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="bold"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:background="@color/purple_50"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="count"
                android:id="@+id/tv_counter"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:textSize="@dimen/_12sdp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:background="@color/brown_50"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wage"
                android:id="@+id/tv_wage"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:textSize="@dimen/_12sdp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:background="@color/green_50"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ok"
                android:id="@+id/tv_ok"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:textSize="@dimen/_12sdp"></TextView>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/tv_lname"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Labour Name"
                    ></TextView>
                        </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.4">
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/tv_wage1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Wage"

                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.4">
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/tv_rating"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Rating"

                    ></TextView>
            </LinearLayout>
            <LinearLayout

                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2">
                <CheckBox
                    android:id="@+id/checklabor"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"></CheckBox>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_accetjob"></androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/btn_accept"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/rv_accetjob"
                android:layout_gravity="center_vertical"
                android:background="@drawable/square_box"
                android:backgroundTint="@color/green_400"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="sans-serif-condensed"
                android:padding="@dimen/_10sdp"
                android:text="Accept Job"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:ignore="RtlCompat"></TextView>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>