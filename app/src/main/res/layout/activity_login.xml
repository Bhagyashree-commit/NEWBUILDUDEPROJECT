<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blue_100"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/header_icon"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logof"/>

    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_mobnum"
            android:drawableLeft="@drawable/call"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="10"
            android:background="@drawable/square_box"
            android:textSize="@dimen/_15sdp"
            android:layout_width="@dimen/_150sdp"
            android:textAllCaps="true"
            android:layout_height="@dimen/_40sdp"
            android:hint="Enter Mob No"></EditText>

    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_password"
            android:drawableLeft="@drawable/ic_password"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/square_box"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left"
            android:drawablePadding="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:hint="Password"
            android:textAllCaps="true"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"></EditText>

    </LinearLayout>
        <LinearLayout

            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/btnlogin"
                android:fontFamily="sans-serif-condensed"
                android:backgroundTint="@color/cyan_800"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/square_box"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Login"></TextView>
        </LinearLayout>

         <LinearLayout
             android:backgroundTint="@color/red_700"
             android:background="@drawable/square_box"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_150sdp"
            android:layout_width="wrap_content"
            android:gravity="bottom"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_height="wrap_content"
             android:orientation="vertical">
             <TextView
                 android:backgroundTint="#6C102A"
                 android:background="@drawable/square_box"
                 android:fontFamily="sans-serif-condensed"
                 android:textColor="@color/white"
                 android:gravity="center"
                 android:textAlignment="center"
                 android:textAllCaps="true"
                 android:textSize="@dimen/_15sdp"
                 android:textStyle="bold"
                 android:padding="@dimen/_5sdp"
                 android:lines="2"
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:text="Change  \n  password"></TextView>
         </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Do not have AN ACCOUNT?"></TextView>
            <TextView
                android:id="@+id/tv_signup"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textColor="@color/red_700"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="SIGN UP"></TextView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>