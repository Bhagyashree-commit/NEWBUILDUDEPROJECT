<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_100"
    tools:context=".Labour.StartTrackActivity">
    <RelativeLayout
        android:id="@+id/rel_lay"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textAlignment="center"
            android:id="@+id/tv_applyjob"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            android:drawablePadding="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_height="@dimen/_40sdp"
            android:text="Start Tracking"
            android:gravity="center_horizontal"></TextView>

    </RelativeLayout>
    <LinearLayout
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/lljob"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_margin="@dimen/_5sdp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                >
                <TextView
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/_50sdp"
                    android:id="@+id/tv_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COUNTER"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/red_800"></TextView>
                <ImageView
                    android:id="@+id/mapmarker"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pin"></ImageView>


                <TextView
                    android:layout_below="@+id/tv_counter"
                    android:textStyle="bold"
                    android:id="@+id/jobareatext"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/jobarea"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_below="@+id/tv_counter"
                    android:singleLine="true"
                    android:id="@+id/jobareainput"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/jobareatext"
                    android:text="Apple MacBook Air"
                    android:textColor="@color/black"
                    />


                <TextView
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:id="@+id/cratingtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jobareatext"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/_10sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:text="@string/contractorrating"
                    />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/cratinginput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jobareainput"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/cratingtext"
                    android:layout_marginTop="5dp"
                    android:background="@color/green_500"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/labortypetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cratingtext"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/typeoflabor"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/labortypeinput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cratinginput"
                    android:layout_toRightOf="@id/labortypetext"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="INR 56990"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/wageratetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labortypeinput"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/wagerate"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"/>


                <TextView
                    android:id="@+id/wagerateinput"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labortypeinput"
                    android:layout_toRightOf="@id/wageratetext"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:text="INR 56990"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/jobdatetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wagerateinput"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/jobdate"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/jobdateinput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wagerateinput"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/jobdatetext"
                    android:layout_marginTop="5dp"
                    android:text="INR 56990"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    />
                <ImageView
                    android:visibility="gone"
                    android:layout_below="@+id/jobdateinput"
                    android:layout_weight=".1"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_radio_button_checked"
                    android:layout_gravity="right|end"
                    android:id="@+id/ivradioOn"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_13sdp"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView
                    android:layout_below="@+id/jobdateinput"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_radio_off"
                    android:layout_gravity="right|end"
                    android:layout_weight=".1"
                    android:id="@+id/ivradio"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_13sdp"
                    tools:ignore="VectorDrawableCompat" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/rv_accetjob"
            android:backgroundTint="@color/purple_900"
            android:background="@drawable/square_box"
            android:id="@+id/btn_starttrack"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawablePadding="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:textAllCaps="true"
            android:layout_height="@dimen/_40sdp"
            android:text="Start Tracking"
            android:layout_gravity="center"
            ></TextView>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/rv_accetjob"
            android:backgroundTint="@color/purple_900"
            android:background="@drawable/square_box"
            android:id="@+id/btn_stoptracking"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawablePadding="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:textAllCaps="true"
            android:layout_height="@dimen/_40sdp"
            android:text="Stop Tracking"
            android:layout_gravity="center"
            ></TextView>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/rv_accetjob"
            android:backgroundTint="@color/purple_900"
            android:background="@drawable/square_box"
            android:id="@+id/btn_stopwork"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawablePadding="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:textAllCaps="true"
            android:layout_height="@dimen/_40sdp"
            android:text="Stop Work"
            android:layout_gravity="center"
            ></TextView>
    </LinearLayout>
</LinearLayout>