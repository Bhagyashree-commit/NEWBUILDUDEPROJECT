<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blue_100"
    android:layout_height="match_parent"
    tools:context=".Labour.LabourProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/grey_800"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:drawablePadding="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_height="@dimen/_40sdp"
                android:text="Labour Profile"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/header_icon"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logof"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <RadioGroup
               android:id="@+id/rg_gender"
               android:background="@drawable/square_box"
               android:layout_width="match_parent"
               android:paddingLeft="@dimen/_10sdp"
               android:paddingRight="@dimen/_10sdp"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <RadioButton
                   android:id="@+id/rb_male"
                   android:fontFamily="sans-serif-condensed"
                   android:textSize="@dimen/_15sdp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="MALE"></RadioButton>
              <RadioButton
                  android:id="@+id/rb_female"
                  android:fontFamily="sans-serif-condensed"
                  android:textSize="@dimen/_15sdp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="FEMALE"></RadioButton>
           </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_location"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@drawable/location"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/square_box"
                android:textSize="@dimen/_15sdp"
                android:layout_width="@dimen/_200sdp"
                android:textAllCaps="true"
                android:layout_height="@dimen/_40sdp"
                android:hint="LOCATION*"></EditText>

        </LinearLayout>


        <LinearLayout

            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:weightSum="2"
                android:layout_marginRight="@dimen/_35sdp"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <EditText
                        android:inputType="number"
                        android:id="@+id/et_pincode"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/square_box"
                        android:textSize="@dimen/_15sdp"
                        android:layout_width="wrap_content"
                        android:digits="0123456789"
                        android:maxLength="6"
                        android:layout_height="wrap_content"
                        android:hint="PIN CODE*"></EditText></LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_dob"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:padding="@dimen/_10sdp"
                        android:background="@drawable/square_box"
                        android:textSize="@dimen/_15sdp"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        android:hint="BIRTH DATE*"></TextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linlay"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:spinnerMode="dialog"
                android:id="@+id/spinn_cat"
                android:dropDownWidth="fill_parent"
                android:background="@drawable/square_box"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_35sdp"
                android:popupBackground="@color/white"></Spinner>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_wage"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/square_box"
                android:textSize="@dimen/_15sdp"
                android:layout_width="@dimen/_200sdp"
                android:textAllCaps="true"
                android:layout_height="@dimen/_40sdp"
                android:hint="MIN WAGE RATE*"></EditText>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_adharnumber"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/square_box"
                android:textSize="@dimen/_15sdp"
                android:layout_width="@dimen/_200sdp"
                android:textAllCaps="true"
                android:layout_height="@dimen/_40sdp"
                android:hint="AADHAR NUMBER"></EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_submitlabordetails"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/square_box"
                android:backgroundTint="@color/cyan_800"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"></TextView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>