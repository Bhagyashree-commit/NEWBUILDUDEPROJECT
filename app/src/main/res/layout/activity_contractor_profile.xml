<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blue_100"
    android:layout_height="match_parent"
    tools:context=".Contractor.ContractorProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">



  <LinearLayout
      android:background="@color/grey_800"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:orientation="horizontal">
      <TextView
          android:gravity="center"
          android:fontFamily="sans-serif-condensed"
          android:textColor="@color/white"
          android:drawablePadding="@dimen/_5sdp"
          android:padding="@dimen/_10sdp"
          android:textSize="@dimen/_15sdp"
          android:layout_width="match_parent"
          android:textAllCaps="true"
          android:textStyle="bold"
          android:layout_height="@dimen/_40sdp"
          android:text="Contractor Profile"></TextView>

  </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/header_icon"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logof"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_compname"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_company"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:background="@drawable/square_box"
                android:textSize="@dimen/_15sdp"
                android:layout_width="@dimen/_200sdp"
                android:inputType="textCapCharacters"
                android:layout_height="@dimen/_40sdp"
                android:hint="Company Name*"><requestFocus />></EditText>

        </LinearLayout>
 <LinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
     <LinearLayout
         android:layout_marginLeft="@dimen/_35sdp"
         android:layout_marginTop="@dimen/_5sdp"
         android:layout_width="match_parent"
         android:layout_height="@dimen/_50sdp"
         android:weightSum="2"
         android:layout_marginRight="@dimen/_35sdp"
         android:gravity="center"
         android:orientation="horizontal">
         <LinearLayout
             android:gravity="center"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1">
             <EditText
                 android:inputType="textCapCharacters"
                 android:id="@+id/et_location"
                 android:fontFamily="sans-serif-condensed"
                 android:textColor="@color/black"
                 android:padding="@dimen/_10sdp"
                 android:background="@drawable/square_box"
                 android:textSize="@dimen/_15sdp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:hint="Location"></EditText></LinearLayout>

         <LinearLayout
             android:gravity="center"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1">
             <EditText
                 android:id="@+id/et_pincode"
                 android:fontFamily="sans-serif-condensed"
                 android:textColor="@color/black"
                 android:padding="@dimen/_10sdp"
                 android:background="@drawable/square_box"
                 android:textSize="@dimen/_15sdp"
                 android:layout_width="wrap_content"
                android:inputType="number"
                 android:digits="0123456789"
                 android:maxLength="10"
                 android:layout_height="wrap_content"
                 android:hint="Pincode"></EditText>
         </LinearLayout>
     </LinearLayout>

 </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/et_email"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableLeft="@drawable/email"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/square_box"
                android:textSize="@dimen/_15sdp"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:hint="Enter mail Id*"></EditText>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:orientation="horizontal">
            <EditText
                android:inputType="textCapCharacters"
                android:gravity="start"
                android:id="@+id/et_generalinfo"
                android:maxLines="4"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/square_box"
                android:textSize="@dimen/_15sdp"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:hint="General Information"></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_submitdeatils"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/square_box"
                android:backgroundTint="@color/cyan_800"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"></TextView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>