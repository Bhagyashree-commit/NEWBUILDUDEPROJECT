<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_100"
    tools:context=".RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/header_icon"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logof"/>

        </LinearLayout>

 <LinearLayout
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_mobnum"
            android:drawableLeft="@drawable/call"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:digits="0123456789"
            android:maxLength="10"
            android:inputType="phone"
            android:background="@drawable/square_box"
            android:textSize="@dimen/_15sdp"
            android:layout_width="@dimen/_150sdp"
            android:textAllCaps="true"
            android:layout_height="@dimen/_40sdp"
            android:hint="Enter Mob No"></EditText>


     <TextView
         android:id="@+id/tv_check"
         android:backgroundTint="#803177"
         android:fontFamily="sans-serif-condensed"
         android:textColor="@color/white"
         android:textStyle="bold"
         android:background="@drawable/square_box"
         android:textSize="@dimen/_15sdp"
         android:layout_width="@dimen/_90sdp"
         android:textAllCaps="true"
         android:gravity="center"
         android:layout_marginLeft="@dimen/_5sdp"
         android:layout_height="@dimen/_30sdp"
         android:text="Check"></TextView>
</LinearLayout>
        <LinearLayout
          android:visibility="invisible"
            android:orientation="vertical"
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_otp"
                android:drawableLeft="@drawable/ic_otp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/square_box"
                android:textSize="@dimen/_15sdp"
                android:layout_width="@dimen/_150sdp"
                android:textAllCaps="true"
                android:layout_height="@dimen/_40sdp"
                android:hint="Enter OTP"></EditText>


            <TextView
                android:id="@+id/tv_verify"
                android:backgroundTint="#915802"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/square_box"
                android:textSize="@dimen/_15sdp"
                android:layout_width="@dimen/_90sdp"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="Verify"></TextView>

        </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:visibility="invisible"
            android:orientation="vertical"
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_password"
                android:drawableLeft="@drawable/ic_password"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:inputType="textPassword"
                android:background="@drawable/square_box"
                android:textSize="@dimen/_15sdp"
                android:layout_width="@dimen/_150sdp"
                android:textAllCaps="true"
                android:layout_height="@dimen/_40sdp"
                android:hint="Password"></EditText>


            <ImageView
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"
                android:layout_width="@dimen/_90sdp"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/eye"></ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <EditText
                android:id="@+id/et_fname"
                android:drawableLeft="@drawable/ic_name"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/square_box"
                android:textSize="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:textAllCaps="true"
                android:layout_height="@dimen/_40sdp"
                android:hint="First Name"></EditText></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <EditText
                android:id="@+id/et_lname"
                android:drawableLeft="@drawable/ic_name"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/square_box"
                android:textSize="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:textAllCaps="true"
                android:layout_height="@dimen/_40sdp"
                android:hint="Last Name"></EditText>
            </LinearLayout>
        </LinearLayout>


         <LinearLayout
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_90sdp"
            android:layout_width="match_parent"
             android:layout_marginRight="@dimen/_25sdp"
            android:layout_height="wrap_content"
             android:orientation="horizontal">
             <EditText
                 android:id="@+id/et_refmobile"
                 android:drawablePadding="@dimen/_5sdp"
                 android:drawableLeft="@drawable/call"
                 android:fontFamily="sans-serif-condensed"
                 android:textColor="@color/black"
                 android:padding="@dimen/_15sdp"
                 android:background="@drawable/square_box"
                 android:textSize="@dimen/_15sdp"
                 android:layout_width="match_parent"
                 android:textAllCaps="true"
                 android:layout_height="wrap_content"
                 android:hint="Referral Mobile Number"></EditText>
         </LinearLayout>

         <LinearLayout
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:orientation="horizontal">

             <CheckBox

                 android:layout_width="@dimen/_20sdp"
                 android:layout_height="@dimen/_20sdp"></CheckBox>

             <TextView
                 android:fontFamily="sans-serif-condensed"
                 android:layout_marginLeft="@dimen/_5sdp"
                 android:textColor="@color/blue_800"
                 android:textStyle="bold"
                 android:textSize="@dimen/_15sdp"
                 android:layout_width="match_parent"
                 android:textAllCaps="true"
                 android:layout_height="wrap_content"
                 android:text="I agree To terms and conditions"></TextView>
         </LinearLayout>

     <LinearLayout
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
         <TextView
             android:id="@+id/btnsignup"
             android:fontFamily="sans-serif-condensed"
             android:backgroundTint="@color/cyan_800"
             android:textColor="@color/white"
             android:textSize="@dimen/_15sdp"
             android:textStyle="bold"
             android:layout_gravity="center"
             android:gravity="center"
             android:background="@drawable/square_box"
             android:layout_width="@dimen/_120sdp"
             android:layout_height="@dimen/_30sdp"
             android:textAllCaps="true"
             android:text="Sign Up"></TextView>
     </LinearLayout>


    </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Already a member? "></TextView>
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/tv_login"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/red_700"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Login"></TextView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>