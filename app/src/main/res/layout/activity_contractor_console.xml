<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blue_100"
    android:layout_height="match_parent"
    tools:context=".Contractor.ContractorConsole">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/header"></include>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp">
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_margin="@dimen/_10sdp"
                    android:backgroundTint="@color/pink_800"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_60sdp"
                    app:cardElevation="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-condensed"
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Post Job"
                        android:textSize="@dimen/_15sdp"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:backgroundTint="@color/red_300"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardElevation="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_weight="1">

                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:text="Payment"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_15sdp"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:backgroundTint="@color/green_600"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardElevation="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_weight="1">
                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:text="Accept"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_15sdp"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:id="@+id/card3"
                    android:backgroundTint="@color/grey_500"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardElevation="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_weight="1">

                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:text="Profile"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_15sdp"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">
                <androidx.cardview.widget.CardView
                    android:backgroundTint="@color/blue_grey_400"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardElevation="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_weight="1">
                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:text="Tracking"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_15sdp"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:backgroundTint="@color/red_900"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardElevation="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_25sdp"
                    android:layout_weight="1">

                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:text="Summary"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_15sdp"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>

<ImageView
    android:id="@+id/btnlogout"
    android:layout_marginTop="@dimen/_120sdp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right|end"
    android:src="@drawable/logout"></ImageView>
    </LinearLayout>

</ScrollView>