<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contractor.AccpetedOfferFragment">

    <LinearLayout
        android:id="@+id/lin_lay24"
android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
            android:background="@color/green_100"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <Spinner
                android:id="@+id/spin_loc"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_35sdp"
                android:fontFamily="sans-serif-condensed"
                android:spinnerMode="dropdown"
                android:text="Location"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="bold"></Spinner>    </LinearLayout>
        <LinearLayout
            android:background="@color/red_100"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:textSize="@dimen/_12sdp"></TextView>



        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/tv_getaccpetedjob"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/square_box"
        android:backgroundTint="@color/brown_400"
        android:drawablePadding="@dimen/_5sdp"
        android:fontFamily="sans-serif-condensed"
        android:padding="@dimen/_10sdp"
        android:text="Get Accepted Job"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        tools:ignore="RtlCompat"></TextView>

</FrameLayout>